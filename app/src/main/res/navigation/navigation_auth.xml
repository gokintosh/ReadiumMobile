<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation_auth"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.gokul.kameleonmobile.ui.auth.SignUpFragment"
        android:label="SignUpFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.gokul.kameleonmobile.ui.auth.LoginFragment"
        android:label="LoginFragment" />
    <action
        android:id="@+id/gotoLoginFragment"
        app:destination="@id/loginFragment"
        app:popUpTo="@id/navigation_auth"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_pop_exit_anim" />
    <action
        android:id="@+id/gotoSignUpFragment"
        app:popUpTo="@id/navigation_auth"
        app:destination="@id/signUpFragment"
        app:enterAnim="@anim/nav_default_enter_anim"
        app:exitAnim="@anim/nav_default_pop_exit_anim" />

</navigation>